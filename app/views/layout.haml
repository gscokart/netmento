
!!! XML
!!!
%html
  %head
    %title Netmento
    %link(rel="stylesheet" href="http://yui.yahooapis.com/3.16.0/build/cssreset/cssreset-min.css")
    %link(rel="stylesheet" href="css/styles.css")
    %link(rel="stylesheet" href="bootstrap/css/bootstrap.min.css")
  %body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          .navbar-brand
            Netmento
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{:class => env["REQUEST_PATH"]=="/netmento" && "active"}
              %a(href="/netmento") Home
            %li{:class => env["REQUEST_PATH"]=="/profile" && "active"}
              %a(href="profile") Profile
            %li{:class => env["REQUEST_PATH"]=="/network" && "active"}
              %a(href="network") Network
            %li{:class => env["REQUEST_PATH"]=="/knowledgeArea" && "active"}
              %a(href="knowledgeArea") Knowledge Area
            %li{:class => env["REQUEST_PATH"]=="/share" && "active"}
              %a(href="share") Share
          .nav.navbar-nav.navbar-right
            %p.navbar-text
              Welcome 
              %a(href="profile")= @user.name
              &dash;
              %a(href="logout") Logout
    .container
      =yield
    -#%footer
      %p
        &copy; Netmento 2014
    -# Placed at the end of the document so the pages load faster
    %script(src="jquery-2.1.1.js")
    %script(src="bootstrap/js/bootstrap.min.js")
